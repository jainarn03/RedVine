@{
    ViewData["Title"] = "Chat";
}
@using RedVine.Models;
@model List<Chat>

<div class="container-fluid" style="height: calc(100vh - 56px);">
    <!-- Adjust height based on navbar -->
    <div class="row h-100">
        <!-- Chat Messages -->
        <div class="col-9 d-flex flex-column">
            <!-- Messages Area -->
            <div class="overflow-auto flex-grow-1" style="padding: 10px;">
                <ul class="list-unstyled">
                    @foreach (var message in Model[0].Messages)
                    {
                        <li class="mb-2">
                            <div class="d-flex @((message.Owner == Model[0].Owner) ? "justify-content-end" : "justify-content-start")">
                                <div class="rounded px-3 py-2"
                                     style="max-width: 60%;
                                            background-color: @((message.Owner == Model[0].Owner) ? "#d1e7dd" : "#f8d7da");
                                            color: @((message.Owner == Model[0].Owner) ? "#0f5132" : "#842029");">
                                    <h6 class="mb-1">@message.Owner</h6>
                                    <p class="mb-0">@message.Message</p>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>

            <!-- Send Message Area -->
            <div class="p-3" style="flex-shrink: 0;">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Send a message to Wisepenguin" />
                    <button class="btn btn-primary" type="button">Send</button>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-3 bg-light text-dark d-flex flex-column flex-shrink-0 p-3"
             style="overflow-y: auto;">
            <h2>Chats</h2>
            <hr />
            <ul class="nav nav-pills flex-column mb-auto">
                @foreach (var chat in Model)
                {
                    <li class="nav-item mb-2 @((chat == Model.First()) ? "active" : "")">
                        <div class="border border-black rounded p-3" style="@((chat == Model.First()) ? "background-color:#ADD8E6" : "")">
                            <h4>@chat.Recipiant</h4>
                            <p>@chat.Messages.First().Message</p>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
